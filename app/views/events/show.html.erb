
<div id="side">
  <div id="guests">
    <h3>Going:</h3>
    <% if @event.users.empty? %>
      <em>No one joined yet</em>
    <% else %>
      <% @event.users.each do |user| %>
        <%= "#{user.name}" %></br>
      <% end%>
    <% end%>
  </div>
</div>

<div id="content">
  <div id="event_description">
    <h2><%= @event.name %></h2>
    Added by <%= "#{User.find_by_id(@event.user_id).name}"%>:</br>
    Description: <%= @event.url %></br>
    When:<%= @event.date.strftime(" %B %d at %I:%M %p") %></br>

    <table id="button_table">
    <% if current_user && EventsUser.find_by(user_id: current_user.id, event_id:@event.id) %> 
      <tr>
        <td>Can't make it?</td>
        <td>
          <div class="button">
            <%= button_to "Leave", not_going_path(@event), method: :delete %>
          </div>
        </td>
        <% else %>
        <td>Are you going?</td>
        <td>
          <div class="button">
            <%= button_to "Join", join_path(@event) %>
          </div>
        </td>
      </tr>
      <% end %>
    </table>
    <hr>
    <%= render 'comments' %>
  </div>
   
</div>
  
